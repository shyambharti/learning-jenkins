pipeline {
    agent any

 environment {
        CC = "google.com"
    }
	parameters {
	 string(name: 'PERSON',
	 defaultValue: 'Parameter 1',
	 description: 'We are doing good job')
	 }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'echo url=${CC}'
                echo "hello ${params.PERSON}"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'date'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }

    post {
            always {
                echo 'I will always say Hello again!'
            }
        }
}